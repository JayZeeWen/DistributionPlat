@using Distribution.Model;
@model Distribution.Web.En.Models.OrderModel
@{
    ViewBag.Title = "Home Page";
    Layout = "~/Views/Shared/_LayoutForward.cshtml";
}
<html xmlns="http://www.w3.org/1999/xhtml">
<head>
    <title></title>
    <link type="text/css" rel="stylesheet" href="~/Content/copy/style.css" media="all">
    <link type="text/css" rel="stylesheet" href="~/Content/copy/z.css" media="all">
</head>
<body class="bBg">
    @*<div class="bMain">*@
    ﻿

    <div class="bRight" style="height:950px;">
        <div class="cwNav">
            <a href="Index">Product Area</a>
            <a style="background: #fe6c00; color:#FFF;">Order Record</a>
        </div>
        <!--右侧开始-->
        <div class="grDiv1">
            <div class="grDiv1_1"><label>History of Order</label></div>
            <div class="grDiv1_2">

                <table class="cwTab">
                    <tbody>
                        <tr>
                            <th style="width:6%"></th>
                            <th>Order Number</th>
                            <th>Express Number</th>
                            <th>Current State</th>
                            <th>Time</th>
                        </tr>
                        @{int index = 1;}
                        @foreach (Order item in Model.orderList.DataList)
                        {
                            <tr>
                                <td style="width:6%">@index</td>
                                <td><a href="#" onclick="ShowDetail('@item.F_Id','@item.c_state')">@item.c_order_num</a></td>
                                <td>@item.c_express_num</td>
                                @if (item.c_state == 0)
                                {
                                    <td><span style="color:red">No Order</span></td>
                                }
                                else if (item.c_state == 1)
                                {
                                    <td>Unshipped Delivery</td>
                                }
                                else
                                {
                                    <td>Already Processed</td>
                                }
                                <td>@Convert.ToDateTime(item.F_CreatorTime).ToString("yyyy-MM-dd")</td>
                                @{index += 1;}
                            </tr>
                        }
                    </tbody>
                </table>
                <div style="padding-left:20%;padding-top:20px">
                    @Html.Raw(Model.orderList.PagerHtmlEn(size: 5)) Total @Model.orderList.Total
                </div>
            </div>
        </div>
        <div class="purPro">
            <div class="tqjeDiaPro">
                <h2>Order Detail</h2>
                <div class="tqjeDia1Pro">
                    <table class="cwTab">
                        <tr>
                            <th style="width:30px"></th>
                            <th>Product Name</th>
                            <th>Price（Point）</th>
                            <th>Quantity</th>
                            <th>Total Price</th>
                            <th>Operation</th>
                        </tr>
                        <tbody id="bodyDetail">
                            <tr>
                                @*<td tyle="width:30px">1</td>
                                    <td>线雕提升套</td>
                                    <td>700</td>
                                    <td>2</td>
                                    <td>1400</td>*@
                            </tr>
                        </tbody>
                    </table>
                </div>
                <div class="tqjeDetail" style="margin-bottom:10px">
                    <input class="okPurPro" id="btnSubmitPur" type="button" value="Order" />
                   
                    <input class="closePurPro" onclick="proClose()" type="button" value="Close">
                </div>
            </div>
        </div>


        <script type="text/javascript">
            function submitOrder(orderId) {
                var r = confirm("Do you confirm the order？");
                if (r) {
                    $("#btnSubmitPur").attr("style","width:150px")
                    $("#btnSubmitPur").attr("disabled", "disabled");
                    $("#btnSubmitPur").val("An order is being submitted...");
                    $.ajax({
                        url: '@Url.Action("PostOrder", "Product")',
                        data: {
                            OrderId: orderId
                        },
                        type: "post",
                        dataType: "json",
                        success: function (data) {
                            if (data.state == "success") {
                                alert("Order successful, please wait for the delivery.");
                                var indexUrl = '@Url.Action("OrderRecord", "Product")';
                                window.location.href = indexUrl;
                                return true;
                            } else {
                                alert("Order failure ： " + data.message)
                            }
                        }
                    });
                }
            }

            function delOrderDetail(detailId) {
                var r = confirm("Do you confirm the deletion?");
                if (r) {
                    $.ajax({
                        url: '@Url.Action("DelOrderDetail", "Product")',
                        data: {
                            DetailId: detailId
                        },
                        type: "post",
                        dataType: "json",
                        success: function (data) {
                            if (data.state == "success") {
                                alert("Delete success");
                                var indexUrl = '@Url.Action("OrderRecord", "Product")';
                                window.location.href = indexUrl;
                                return true;
                            } else {
                                alert("Delete failure： " + data.message)
                            }
                        }
                    });
                }
            }

            function ShowDetail(orderId, state) {
                //alert(orderId);
                $("#bodyDetail").html("");
                if (state != 0) {
                    $("#btnSubmitPur").hide();
                }
                $.ajax({
                    url: '@Url.Action("GetOrderDetail", "Product")',
                    data: {
                        OrderId: orderId
                    },
                    type: "post",
                    dataType: "json",
                    success: function (data) {
                        if (data.state == "success") {
                            var tbody = "";
                            if (data.data != null) {
                                for (var i = 0 ; i < data.data.length; i++) {
                                    var item = data.data[i];
                                    var id = '"' + item.F_Id + '"'
                                    tbody += "<tr>"
                                    tbody += "<td tyle='width:30px'>" + (i + 1) + "</td>"
                                    tbody += "<td>" + item.Pro.c_name + "</td>"
                                    tbody += "<td>" + item.Pro.c_price + "</td>"
                                    tbody += "<td>" + item.c_amount + "</td>"
                                    tbody += "<td>" + item.c_total + "</td>"
                                    if (state == 0) {
                                        tbody += "<td><input class='closePurPro' onclick='delOrderDetail(" + id + ")' value='Delete' type='button' /></td>"
                                    } else {
                                        tbody += "<td></td>";
                                    }
                                    tbody += "</tr>"
                                }
                                $("#btnSubmitPur").attr("onclick", "submitOrder('" + orderId + "')");
                                $("#bodyDetail").html(tbody);
                            }
                            $(".purPro").show();

                        } else {
                            alert("Getting information failure.")
                        }
                    }
                });
                $(".purPro").show();

            }
            function proClose() {
                $(".purPro").hide();
            }


        </script>
        <!--右侧结束-->
    </div>
    <div class="clearB"></div>
    @*</div>*@
    <style>
        .cwNav {
            width: 100%;
            height: 36px;
            margin-bottom: 15px;
        }

            .cwNav a {
                font-size: 16px;
                height: 36px;
                line-height: 36px;
                padding: 0 15px;
                display: block;
                float: left;
                background: #f2f2f2;
                color: #292929;
                border: 1px solid #e1e1e1;
                border-radius: 5px;
                margin-right: 10px;
            }

        .purPro, #prom {
            width: 100%;
            height: 100%;
            background: rgba(0, 0, 0, 0.6);
            position: fixed;
            left: 0;
            top: 0;
            z-index: 10;
            display: none;
        }

        .tqjeDiaPro {
            width: 80%;
            height: 50%;
            overflow: hidden;
            background: #fff;
            position: fixed;
            top: 0;
            right: 0;
            bottom: 0;
            left: 0;
            margin: auto;
            border-radius: 7px;
        }

            .tqjeDiaPro h2 {
                line-height: 50px;
                padding-left: 20px;
                font-weight: bold;
                background: #eee;
                font-size: 20px;
                color: #333;
            }

        .tqjeDia1Pro {
            height: 80px;
        }


        input.okPurPro {
            border: 1px solid #1da75f;
            color: #fff;
            background: #1da75f;
            margin-right: 100px;
        }

        input.closePurPro {
            border: 1px solid #1da75f;
            color: #1da75f;
            background: #fff;
        }

        .tqjeDetail {
            width: 100%;
            height: 50px;
            text-align: center;
            padding-left: 35%;
            padding-top: 20px;
            margin-left: 20px;
            border-top: 1px dashed #eeeeee;
            position: absolute;
            left: 0;
            bottom: 20px;
        }

            .tqjeDetail input {
                width: 78px;
                height: 30px;
                font-size: 14px;
                border-radius: 5px;
                display: block;
                float: left;
            }
    </style>

</body>
</html>